{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "UserDetails",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "email", "mobileNumber"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 3,
      "maxLength": 254
    },
    "mobileNumber": {
      "type": "string",
      "minLength": 7,
      "maxLength": 20,
      "pattern": "^\\+?[0-9][0-9\\-\\s]{6,19}$"
    }
  }
}
